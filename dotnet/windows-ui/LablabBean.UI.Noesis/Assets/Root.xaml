<?xml version="1.0" encoding="utf-8"?>
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:noesis="http://schemas.noesisengine.com/xaml"
      Background="#80000000">
  <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12">
    <Border Background="#DD1E90FF" CornerRadius="6" Padding="8" noesis:Text.FontSize="18">
      <TextBlock Text="Noesis Overlay Active" Foreground="White" />
    </Border>
    <Border Background="#CC000000" CornerRadius="6" Padding="8" Margin="0,8,0,0">
      <StackPanel>
        <TextBlock Text="Press ESC to quit" Foreground="#FFD0D0D0" />
        <TextBlock Text="Overlay is WindowsDX only" Foreground="#FFD0D0D0" />
      </StackPanel>
    </Border>
  </StackPanel>
</Grid>
