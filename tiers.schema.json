{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/tiers.schema.json",
  "title": "Plugin Tier Configuration",
  "type": "object",
  "properties": {
    "tiers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "range": {
            "type": "array",
            "items": { "type": "integer" },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "required": ["name", "range"],
        "additionalProperties": false
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" }
        },
        "required": ["from", "to"],
        "additionalProperties": false
      }
    }
  },
  "required": ["tiers"],
  "additionalProperties": false
}
